<mvc:View
	controllerName="it.davidegiacomini.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
    <Shell>
		<App id="app">
			<pages>
				<Page title="{i18n>homePageTitle}">
                    <headerContent>
                        <Button text="EN" press=".onChangeLanguage($event, 'en')" />
                        <Button text="IT" press=".onChangeLanguage($event, 'it')" />
                    </headerContent>
					<content>
						<mvc:XMLView viewName="it.davidegiacomini.view.Home"/>
					</content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button text="Footer Button" />
                        </OverflowToolbar>
                    </footer>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>